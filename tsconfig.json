{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@jsxls/*": ["packages/*/src"],
      "shared/*": ["packages/shared/src/*"]
    },
    "keyofStringsOnly": true
  },
  "include": ["packages/global.d.ts", "packages/*/src", "__tests__"],
  "exclude": ["dist"]
}
